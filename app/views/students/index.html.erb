
<div class="row">
	<div class="col s12">
		<h3 class="center-align">Student Directory</h3>
	</div>
</div>

<div class="row">
  <% @students.each do |student| %>
    <div class="col s6 m6">
      <div class="card purple darken-3">
        <div class="card-content white-text">
          <span class="card-title">Name: <%= student.name %></span>
          <p>Email: <%= student.email %></p>
          <p>Enrollments List: None</p>
        </div>
        <div class="card-action">
          <%= link_to "View Profile", student_path(student), class: "pink-text text-lighten-4" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
