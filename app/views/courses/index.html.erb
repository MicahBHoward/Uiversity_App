
<div class="row">
	<div class="col s12">
		<h3 class="center-align">Course Listings</h3>
	</div>
</div>

<div class="row">
  <% @courses.each do |course| %>
    <div class="col s6 m6">
      <div class="card purple darken-3">
        <div class="card-content white-text">
          <span class="card-title"><%= course.short_name %>: <%= course.name %></span>
          <p><%= course.description %></p>
        </div>
        <div class="card-action">
          <a href="#" class="pink-text text-lighten-4">Enroll</a>
          <a href="#" class="pink-text text-lighten-4">Info</a>
        </div>
      </div>
    </div>
  <% end %>
</div>
